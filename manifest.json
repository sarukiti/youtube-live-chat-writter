{
    "manifest_version": 2,
    "name": "youtube-live-chat-writter",
    "version": "0.2",
  
    "description": "Popup youtube live-chat writter.",

    "icons": {
      "96": "icons/pen-to-square.svg"
    },
    "permissions": [
      "activeTab",
      "*://*.youtube.com/watch*"
    ],
    "content_scripts": [
      {
        "matches": ["*://*.youtube.com/live_chat*"],
        "js": ["modifyCSS.js"]
      },
      {
        "matches": ["*://*.youtube.com/watch*"],
        "js": ["callPopup.js"]
      }
    ],
    "applications": {
      "gecko": {
        "id": "ylcw@example.com"
      }
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    }
  }